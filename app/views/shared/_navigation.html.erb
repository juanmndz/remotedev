        </li>
      <% end %>
      <%= render 'devise/menu/registration_items' %>
      <%= render 'devise/menu/login_items' %>
    </ul>
  </div>
</nav>
<div style="background: #05A5D1;padding: 50px 0;">
  <h1 style="text-align: center;"><%= link_to site_title, root_path, style: "color: #FDF3E7;font-weight: 300;" %></h1>
</div>
<nav class="navbar navbar-full navbar-dark bg-inverse">
  <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar2">
    &#9776;
  </button>
  <div class="container">
    <div class="row">
      <div class="col-xs-11">
        <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
          <%= link_to "Home", root_path, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
          <%= link_to "About", pages_about_path, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
          <%= link_to "Blog", pages_blog_path, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
          <%= link_to "Contact", pages_contact_path, class: "navbar-brand" %>
        </div>
      </div>
    </div>

  </div>
</nav>
<% if notice || alert %>
  <div class="container">
    <div class="col-xs-12">
      <% if notice %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    </div>
  </div>
<% end %>

